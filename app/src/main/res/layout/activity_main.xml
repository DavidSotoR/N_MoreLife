<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFondo"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:text="MORE LIFE"
            android:fontFamily="@font/sfc"
            android:textColor="@color/color_botones"
            android:layout_marginBottom="20dp"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/logo"
            android:layout_gravity="center"
            android:src="@drawable/icono_morelife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:onClick="Onclick"
            android:text="  Enviar Mensajes"
            android:backgroundTint="@color/color_botones"
            android:textColor="@color/colorLetras"
            android:background="@drawable/forma_boton"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_flecha"
            android:drawableLeft="@drawable/ic_enviar_alerta"/>

        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:onClick="Onclick"
            android:text="  Contactos"
            android:backgroundTint="@color/color_botones"
            android:textColor="@color/colorLetras"
            android:background="@drawable/forma_boton"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_flecha"
            android:drawableLeft="@drawable/ic_circulo_contactos"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:text="  Informacion"
            android:id="@+id/btnInfo"
            android:backgroundTint="@color/color_botones"
            android:textColor="@color/colorLetras"
            android:background="@drawable/forma_boton"
            android:onClick="Onclick"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_flecha"
            android:drawableLeft="@drawable/ic_informacion"/>

        <Button
            android:id="@+id/btnFalsaAlarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:onClick="Onclick"
            android:text="  FALSA ALARMA"
            android:backgroundTint="@color/color_botones"
            android:textColor="@color/colorLetras"
            android:background="@drawable/forma_boton"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_flecha"
            android:drawableLeft="@drawable/ic_falsa_alarma"/>

    </LinearLayout>




